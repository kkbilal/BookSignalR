

@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="card-title">Hakkımda Listesi</div>
                        <a href="/About/CreateAbout/" class="btn btn-outline-primary">
                            <i class="fa fa-plus"></i> Yeni Hakkımda Yazısı
                        </a>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover mt-3">
                            <thead class="table>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col" class="text-center">Sil</th>
                                    <th scope="col" class="text-center">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.AboutId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td class="text-center">
                                            <a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                        <td class="text-center">
                                            <a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-success">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
						</table><a href="/About/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkımda Yazısı</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




