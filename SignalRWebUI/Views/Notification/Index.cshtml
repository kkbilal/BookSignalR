@model List<ResultNotificationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Bildirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Açıklama </th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Okundu</th>
                                    <th scope="col">Okunmadı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Description</td>
                                        <td>@item.Date</td>
                                        @if (item.Status)
                                        {
                                            <td style="color:limegreen">Aktif</td>
                                        }
                                        else
                                        {
                                            <td style="color:red">Pasif</td>
                                        }
                                        <td><a href="/Notification/DeleteNotification/@item.NotificationId" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a></td>

                                        <td><a href="/Notification/UpdateNotification/@item.NotificationId" class="btn btn-outline-success"><i class="fa fa-edit"></i></a></td>

                                        <td><a href="/Notification/NotificationChangeStatusToTrue/@item.NotificationId" class="btn btn-outline-primary"><i class="fa fa-check"></i></a></td>

                                        <td><a href="/Notification/NotificationChangeStatusToFalse/@item.NotificationId" class="btn btn-outline-secondary"><i class="fa fa-times"></i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Notification/CreateNotification/" class="btn btn-outline-primary">Yeni Bildirim</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
