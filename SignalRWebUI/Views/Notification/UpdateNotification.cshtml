@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Bildirim Güncelleme Sayfası</div>
						</div>
						<input type="hidden" asp-for="NotificationId" />
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Bildirim Türü</label>
								<input type="text" class="form-control" asp-for="Type" id="NotificationType">

							</div>
							<div class="form-group">
								<label for="categoryname">Bildirim İkonu</label>
								<input type="text" class="form-control" asp-for="Icon" id="NotificationIcon">

							</div>

							<div class="form-group">
								<label for="categoryname">Bildirim Açıklaması</label>
								<input type="text" class="form-control" asp-for="Description" id="NotificationDescription">

							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Ekle</button>

						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>




