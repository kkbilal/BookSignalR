
@{
	Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">

	@await Component.InvokeAsync("_MenuNavbarComponentPartial")

	<!-- food section -->

	<section class="food_section layout_padding">
        <div class="container mt-5">
            <div class="card shadow-lg p-4">
                <h3 class="text-center mb-4">Anlık Mesajlaşma</h3>

                <div class="mb-3 row align-items-center">
                    <label for="userInput" class="col-sm-3 col-form-label fw-bold">Kullanıcı Adınız</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="userInput" placeholder="Adınızı girin..." />
                    </div>
                </div>

                <div class="mb-3 row align-items-center">
                    <label for="messageInput" class="col-sm-3 col-form-label fw-bold">Mesajınız</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="messageInput" placeholder="Mesajınızı yazın..." />
                    </div>
                </div>

                <div class="mb-3 text-center">
                    <input class="btn btn-warning " id="sendButton" value="Mesaj Gönder" />
                </div>

                <div class="mb-3 align-items-center">
                    <div class="col-12"><hr /></div>
                </div>
                <div class="mb-3 align-items-center">
                    <div class="col-12">
                        <ul id="messageList" class="list-group">
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
	</section>

	<!-- end food section -->
	<!-- footer section -->
	@await Component.InvokeAsync("_UILayoutFooterComponentPartial")
	<!-- footer section -->
	@await Component.InvokeAsync("_UILayoutScriptComponentPartial")

	
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
</body>

</html>