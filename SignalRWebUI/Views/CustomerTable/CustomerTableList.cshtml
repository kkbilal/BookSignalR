@model List<ResultMenuTableDto>
@{
    Layout = null;
    string bg_color = "";
    string status = "";
}


<!DOCTYPE html>
<html>
<style>
    .widget {
        width: 200px;
        height: 100px;
         /* Yeşil arka plan */
        display: flex;
        align-items: center;
        border-radius: 10px;
        color: white;
        font-family: Arial, sans-serif;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .widget-icon {
        width: 40px;
        height: 40px;
        background-color: white;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-left: 10px;
    }

        .widget-icon i {
            font-size: 24px;
            color: #2ecc71;
        }

    .widget-text {
        margin-left: 20px;
    }

        .widget-text h3 {
            margin: 0;
            font-size: 18px;
        }

        .widget-text p {
            margin: 0;
            font-size: 14px;
        }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<title>Widget</title>
@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">

	@await Component.InvokeAsync("_MenuNavbarComponentPartial")

	<br />
	<div class="container-fluid">
		<div class="row px-xl-5">
			<div class="col-12">
				<nav class="breadcrumb bg-dark mb-30"
					 style="border-radius: 8px; padding: 12px 20px; background: linear-gradient(135deg, #343a40, #212529); box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);">
					<a class="breadcrumb-item text-white" href="/Default/Index"
					   style="text-decoration: none; transition: color 0.3s ease;">
						Anasayfa
					</a>
					<a class="breadcrumb-item text-white"
					   style="text-decoration: none; transition: color 0.3s ease;">
						Masa Listesi
					</a>
					<span class="breadcrumb-item active"
						  style="color: #ffc107; font-weight: bold;">
						Masa Seçimi
					</span>
				</nav>
			</div>
		</div>
	</div>
    
        
   
	<div class="container-fluid">
		<div class="row px-xl-5" style="margin-right:10px">
			@foreach (var item in Model)
			{
                if (item.Status==false)
                {

                    bg_color = "22bb33";
                }
                else
                {
                    bg_color = "bb2124";
                }
                if (item.Status == false)
                {
                    status = "Boş";
                }
                else
                {
                    status = "Dolu";
                }
            <div class="col-md-3 mb-4">
            <div class="widget" style="background-color:#@bg_color">
                @if (item.Status==false)
                        {   //boş masa
                            <div class="widget-icon">
                                <a href="/Default/Index/"><i class="fas fa-chair"></i> </a><!-- Masa ikonu -->
                            </div>
                        }
                        else
                        {   //dolu masa
                            <div class="widget-icon">
                                <a ><i class="fas fa-chair"></i> </a><!-- Masa ikonu -->
                            </div>
                        }
                <div class="widget-text">
                    <h3>@item.Name</h3>
                    

                    <p1>@status</p1>
                </div>
					</div>
				</div>
			} 
		</div>
       
	</div>
	
	<!-- end food section -->
	<!-- footer section -->
	@await Component.InvokeAsync("_UILayoutFooterComponentPartial")
	<!-- footer section -->
	@await Component.InvokeAsync("_UILayoutScriptComponentPartial")




</body>

</html>
