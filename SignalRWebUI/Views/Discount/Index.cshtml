@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İndirim Listesi</div>
                    </div>
                    <div class="card-body">

                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Ürün Açıklaması</th>
                                    <th scope="col">Durum</th>
                                    
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Aktif Yap</th>
                                    <th scope="col">Pasif Yap</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.Amount</td>
                                        <td>@item.Description</td>
                                        <td>@item.Status</td>
                                        <td><a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a></td>

                                        <td><a href="/Discount/UpdateDiscount/@item.DiscountId" class="btn btn-outline-success"><i class="fa fa-edit"></i></a></td>
                                        <td><a href="/Discount/ChangeStatusToTrue/@item.DiscountId" class="btn btn-outline-primary"><i class="fa fa-check"></i></a></td>
                                        <td><a href="/Discount/ChangeStatusToFalse/@item.DiscountId" class="btn btn-outline-dark"><i class="fa fa-times"></i></a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>

                        <td><a href="/Discount/CreateDiscount/" class="btn btn-outline-primary">Yeni İndirim</a></td>
                    </div>
                </div>

                
            </div>

        </div>
    </div>
</div>


