@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Müşteri Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Müşteri Yorum Listesi</div>
                    </div>
                    <div class="card-body">

                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ad Soyad</th>
                                    <th scope="col">Durum</th>

                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.Name</td>
                                        @{
                                            if (item.Status == true)
                                            {
                                                <td style="color:limegreen">Aktif</td>
                                            }
                                            else
                                            {
                                                <td style="color:red">Pasif</td>
                                            }
                                        }

                                        <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a></td>

                                        <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-success"><i class="fa fa-edit"></i></a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>

                        <td><a href="/Testimonial/CreateTestimonial/" class="btn btn-outline-primary">Yeni Referans</a></td>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>



